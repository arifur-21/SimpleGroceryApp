<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context=".admincalss.AddAdminPopularProductActivity">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/vegetabel"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/adimPopProductImgId" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your product name"
            android:id="@+id/adminPopProdutNmae" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter your product price"
            android:id="@+id/adminPopProdutPrice" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:hint="Enter your product description"
            android:id="@+id/adminPopProdutdescription" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter your product Discount Price"
            android:id="@+id/adminPopProdutDiscountPrice" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter your product type"
            android:id="@+id/adminPopProdutTypeId" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter your product Rating"
            android:id="@+id/adminPopProdutRatingId" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Popular Product"
            android:background="@drawable/button_bg"
            android:layout_marginTop="20dp"
            android:id="@+id/adminUploadPopularProductBtnId" />


    </LinearLayout>
</layout>